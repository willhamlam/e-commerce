/*header*/ 
header
	position fixed
	z-index 9999
	width 100%
	background #ffffff

header .header-item
	width 18.5%
	float left
	font-size 12px
	margin 10px 0

header .header-item a
	display block
	width 100%
	color #000000

header .header-item.logo
	width 25%
	background #2d2d2d
	margin 0px
	padding-top 12px
	padding-bottom 8px

header .header-item.logo img
	width auto
	height 12px

.hb
	border-right 1px dotted #000000

.fb
	border-right 1px dotted #ffffff

.bb1
	border-bottom 1px solid #ACACAC

.main .wrap
	width 95%
	margin 0 auto

.lineBox li
	border-top 5px solid #000000
	padding-top 4px
	margin-bottom 8px

.lineBox li .boxWrapper
	border-top 1px solid #000000
	padding-top 4px

footer
	background #2d2d2d
	overflow hidden
	color #ffffff
	padding 10px 0

.footer-nav
	width 90%
	margin 0 auto
	padding-bottom 10px
	overflow hidden

.footer-item
	width 33.333333333333%
	float left

.footer-item a
	display block
	width 100%
	color #ffffff

.productWrapper
	width 130px
	height 250px
	margin 0 auto
	border-top 5px solid #000000
	border-bottom 1px solid #000000
	padding-top 4px
	padding-bottom 5px
	margin-bottom 15px

.productWrapper a
	display block
	color #000000

.productWrapper img
	width 100%

.productWrapper p
	color #ACACAC
	padding-bottom 10px

.productItem
	border-top 1px solid #000000
	padding-top 5px

button,
input
	-webkit-appearance none
	outline none

input
	width 100%
	border 1px solid #000000
	border-radius 0px
	padding 10px
	font-size 16px
	color #ACACAC

button
	// width 200px
	display block
	background #00c3bc
	border 0px
	font-size 16px
	padding 4px
	margin 0 auto
	color #ffffff
	font-size 12px

.innerButton
	border 1px solid #ffffff
	padding 10px

ul.det
	overflow hidden

ul.det li
	display inline-block
	float left
	width 50px
	height 50px
	text-align center
	line-height 50px
	border 1px solid #000
	margin-right 10px
	margin-bottom 10px
	font-size 12px

button.delete
	float left
	font-size 12px
	background #c2c2c2
	width 20px
	// height 20px
	// line-height 20px

select
	-webkit-appearance none
	width 100%
	border-radius 0px
	outline none
	padding 10px 20px 10px 10px
	border 1px solid #000
	color #8c8c8c
